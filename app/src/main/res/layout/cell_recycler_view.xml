<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cell_container"
    android:background="#000"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cell_textview"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tools:text="filler"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:textSize="20sp"
            android:ellipsize="end"
            android:maxLines="3"
            android:transitionName="@string/detail_text"
            android:layout_toLeftOf="@+id/cell_imageview"
            />
        <ImageView
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:scaleType="fitCenter"
            android:id="@+id/cell_imageview"
            android:transitionName="@string/detail_image"
            android:layout_marginLeft="4dp"/>
        <!--s-->
    </RelativeLayout>
</RelativeLayout>